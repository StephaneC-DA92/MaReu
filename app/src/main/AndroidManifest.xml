<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.companyx.mareu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_accueil"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaReuNoBar"
        android:name="MaReuApplication">

        <activity android:name=".controller.activities.FilteringActivity"
            android:parentActivityName=".controller.activities.MainActivity"/>

        <activity android:name=".controller.activities.AddMeetingActivity"
            android:parentActivityName=".controller.activities.MainActivity"/>

        <activity android:name=".controller.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>