<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/frame_accueil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.fragments.FragmentAccueil"
    tools:listitem="@layout/reunion_item">

    <ImageView
        android:id="@+id/meeting_room_ic"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="@color/teal_200"
        android:src="@drawable/ic_baseline_meeting_logo_24"
        android:layout_above="@id/frame_texte_accueil"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/frame_texte_accueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/texte_accueil_ic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_room_service_24"
            android:layout_above="@id/frame_texte_accueil"
            android:layout_gravity="bottom"/>

        <TextView
            android:id="@+id/texte_accueil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            android:textColor="@color/blue_1"
            android:textStyle="bold"
            android:text="@string/app_name"
            />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="4dp"
        android:background="@color/blue_1"
        android:layout_below="@id/frame_texte_accueil"
        />

</RelativeLayout>