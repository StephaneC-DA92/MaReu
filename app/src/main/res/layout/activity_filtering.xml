<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activities.AddMeetingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/filter_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/filter_action_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways"
            app:titleTextColor="@color/white"
            app:title="Trier les réunions"
            android:gravity="center"/>

    </com.google.android.material.appbar.AppBarLayout>

    <EditText
        android:id="@+id/FiltreDateHeureDebut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:hint="Heure de début"
        android:layout_marginVertical="40dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_action_bar"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableStart="@drawable/ic_baseline_access_time_24"/>


    <EditText
        android:id="@+id/FiltreDateHeureFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="datetime"
        android:hint="Heure de fin"
        android:layout_marginVertical="40dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FiltreDateHeureDebut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/FiltreSalles"
        android:drawableStart="@drawable/ic_baseline_access_time_24"/>

    <MultiAutoCompleteTextView
        android:id="@+id/FiltreSalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="80dp"
        android:drawableStart="@drawable/ic_baseline_people_24"
        android:drawablePadding="10dp"
        android:gravity="bottom"
        android:hint="Choisir les salles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FiltreDateHeureFin" />

</androidx.constraintlayout.widget.ConstraintLayout>
